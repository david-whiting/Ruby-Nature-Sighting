<h1>Login</h1>
<%= form_tag(sessions_path) do %>
  <%= text_field_tag :name, '', :placeholder => "Name" %>
  <%= text_field_tag :email, '', :placeholder => "Email" %>
  <%= password_field_tag :password, '', :placeholder => "Password" %>
  <%= submit_tag %>
<% end %><BR>

<%= link_to "Back to home", "/" %>

